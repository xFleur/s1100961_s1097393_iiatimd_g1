<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_Color"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: 1/10"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: 0"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txtCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Correct: 16"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wrong: 12"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:13"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="Mark Heij is de lekkerste man in de wereld"
            android:background="@drawable/question_container_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:text="OS"
                android:textSize="22sp"
                android:padding="18dp"
                android:background="@drawable/default_option_bg"
                android:textColor="#000"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:freezesText="true"
                android:text="Random Access Memory"
                android:padding="18dp"
                android:background="@drawable/default_option_bg"
                android:textSize="22sp"
                android:textColor="#000"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:freezesText="true"
                android:layout_marginTop="5dp"
                android:padding="18dp"
                android:background="@drawable/default_option_bg"
                android:text="Browser"
                android:textSize="22sp"
                android:textColor="#000"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:freezesText="true"
                android:layout_marginTop="5dp"
                android:text="Operating System"
                android:padding="18dp"
                android:background="@drawable/default_option_bg"
                android:textSize="22sp"
                android:textColor="#000"
                android:textAlignment="center"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_button_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Confirm" />
    </LinearLayout>


</LinearLayout>